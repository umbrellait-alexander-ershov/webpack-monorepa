    "mini-css-extract-plugin": "^2.9.2",
    "react-refresh": "^0.16.0",
    "sass": "^1.83.4",
    "sass-loader": "^16.0.4",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.2",
